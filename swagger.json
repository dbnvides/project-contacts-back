{
  "openapi": "3.0.1",
  "info": {
    "title": "Project Contacts",
    "description": "Documentation from contacts api",
    "version": "1.0"
  },

  "basePath": "/",
  "paths": {
    "/login": {
      "post": {
        "tags": ["Login"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                },
                "example": {
                  "email": "admin@mail.com",
                  "password": "123456"
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "token"
          },
          "403": {
            "description": "Invalid credentials"
          }
        }
      }
    },
    "/client": {
      "post": {
        "tags": ["Client"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "fullName": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  },
                  "telephone": {
                    "type": "string"
                  }
                },
                "example": {
                  "fullName": "Admin",
                  "email": "admin@mail.com",
                  "password": "123456",
                  "telephone": "20912345678"
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "return object with values"
          },
          "400": {
            "description": "Email already exist!"
          }
        }
      }
    }
  }
}
